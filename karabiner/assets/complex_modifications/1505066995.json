{
  "title": "Tapping modifier-keys produces a key&f-key.",
  "rules": [
    {
      "description": "Press left_shift alone produces F12",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f12"
            }
          ]
        }
      ]
    },
    {
      "description": "Press left_control alone produces F13",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
